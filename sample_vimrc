" plugs
call plug#begin('~/.vim/plugged')
" jsx syntax highlight
Plug 'pangloss/vim-javascript'
Plug 'mxw/vim-jsx'
call plug#end()

" enable mouse
set mouse=a

" show numbers of the lines
set nu

" highlight matching braces
set showmatch

" search settings
set hlsearch
set incsearch
set ignorecase	" case insensitive search
set smartcase 	" unless if capitals are used

" enable folding with syntax
set foldmethod=syntax
" configure for python
syntax on
filetype indent plugin on

" configure the size of the \tab
set tabstop=1		" the width of a \tab
set shiftwidth=1	" indent has a width of 1
set softtabstop=1	" set num of columns for a \tab
set expandtab		" expand tab to spaces


" highlight lingering whitespace
highlight ExtraWhitespace ctermbg=blue guibg=blue
match ExtraWhitespace /\s\+$/

" indent settings
set autoindent
set smartindent
set modeline

" open with cursor on last spot
if has("autocmd")
  au BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$")
    \| exe "normal! g'\"" | endif
endif

" discard unsaved changes?
set confirm

" configure paste settings not to mess up indent
set pastetoggle=<f5>
set paste
